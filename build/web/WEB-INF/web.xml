<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>cityController</servlet-name>
        <servlet-class>Controller.cityController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>countryController</servlet-name>
        <servlet-class>Controller.countryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>hotelController</servlet-name>
        <servlet-class>Controller.hotelController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>roomController</servlet-name>
        <servlet-class>Controller.roomController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>searchController</servlet-name>
        <servlet-class>Controller.searchController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>typeController</servlet-name>
        <servlet-class>Controller.typeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cityController</servlet-name>
        <url-pattern>/city</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>countryController</servlet-name>
        <url-pattern>/country</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>hotelController</servlet-name>
        <url-pattern>/hotel</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>roomController</servlet-name>
        <url-pattern>/room</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>searchController</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>typeController</servlet-name>
        <url-pattern>/type</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>
</web-app>
